@model Task2.Models.LoginModel

@{
    ViewBag.Title = "Login page";
}

@{
    Layout = "~/Views/_LayoutPage1.cshtml";
}


    <div class="container bgcont center-block centered-top">
        
            @using (Html.BeginForm("Login","Account"))
            {
                @Html.ValidationSummary()
                <p>Ваш логин: @Html.TextBoxFor(x => x.Login)</p>
                <p>Ваш пароль: @Html.TextBoxFor(x => x.Password)</p>
                <p><input class="btn btn-success" type="submit" value="Войти" /></p>
                <p class="btn btn-success" >@Html.ActionLink("Регистрация", "Register")</p>
            }
        
    </div>


